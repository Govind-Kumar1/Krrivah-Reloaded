generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contact {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  phone     String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(Admin)
  createdAt DateTime @default(now())
}

model Blog {
  id            Int      @id @default(autoincrement())
  category      String
  thumbnail     String
  mainImage     String
  middleImage   String?
  date          DateTime @default(now())
  title         String
  short_des     String
  long_des      String
  quote         String?
  isActive      Boolean  @default(true)
  slug_keywords String?
  slug_url      String?
}

model Project {
  id        Int        @id @default(autoincrement())
  category  String
  thumbnail String
  title     String
  location  String
  short_des String
  long_des  String
  images    String[]
  isActive  Boolean    @default(true)
  createdAt DateTime   @default(now())
  Brochure  String
  Amenities Amenitiy[]
}

model Amenitiy {
  id        Int      @id @default(autoincrement())
  projectId Int
  title     String
  listings  String[]
  project   Project  @relation(fields: [projectId], references: [id])
}

model Image {
  id        Int      @id @default(autoincrement())
  pageName  String
  component String
  imageUrl  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HeroBrand {
  id          Int      @id @default(autoincrement())
  title       String
  imageUrl    String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  brand       String
}

model AchievementStat {
  id          Int      @id @default(autoincrement())
  unit        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([unit, description])
}

enum Role {
  Admin
  Super_Admin
}
